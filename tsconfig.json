{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["jest"],
    "noEmit": true,
    "strict": false,
    "strictNullChecks": false
  },
  "include": ["index.ts", "__tests__/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

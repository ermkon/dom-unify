{
  "name": "dom-unify",
  "version": "1.2.0",
  "description": "Chainable library that unifies all DOM operations into one fluent API. Context navigation with history and marks, nested data-binding for objects and forms, unique clipboard (copy/paste subtrees preserving all input, checkbox, select values), builder and utilities.",
  "keywords": [
    "dom",
    "dom-manipulation",
    "dom-builder",
    "dom-navigation",
    "chainable",
    "fluent-api",
    "data-binding",
    "create-element",
    "lightweight",
    "frontend"
  ],
  "homepage": "https://github.com/ermkon/dom-unify#readme",
  "bugs": {
    "url": "https://github.com/ermkon/dom-unify/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ermkon/dom-unify.git"
  },
  "license": "MIT",
  "author": "ermkon",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:tsc": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest",
    "test:watch": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest --watch",
    "test:coverage": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" npx jest --coverage"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.1",
    "resize-observer-polyfill": "^1.5.1",
    "rollup": "^4.59.0",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
